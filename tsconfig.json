{
    "include": [
        "./src/index.ts"
    ],
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "outDir": "dist"
    }
}